  #
  # table sensorupdate
  #
  # Sensor1
  $dbh->do(" INSERT INTO sensorupdate VALUES ('1','0') ");
  $dbh->do(" INSERT INTO sensorupdate VALUES ('2','0') ");
  # Sensor2
  $dbh->do(" INSERT INTO sensorupdate VALUES ('3','0') ");
