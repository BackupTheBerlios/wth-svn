  # 0x68 - 0x6f pyranometer V1.2 address 0 .. 7
  $dbh->do(" INSERT INTO sensornames VALUES ('104','Pyranometer','0x00','V1.2') ");
  $dbh->do(" INSERT INTO sensornames VALUES ('105','Pyranometer','0x01','V1.2') ");
