  $dbh->do(" INSERT INTO sensorupdate VALUES ('8','0') ");
  $dbh->do(" INSERT INTO sensorupdate VALUES ('9','0') ");
  $dbh->do(" INSERT INTO sensorupdate VALUES ('10','0') ");
