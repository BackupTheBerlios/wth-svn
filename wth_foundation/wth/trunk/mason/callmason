#my $retval = $interp->exec('/rrdfetch', rrd=>'PressureI', ds =>'PressureI');
#my $retval = $interp->exec('/rrdgraph', rrd=>'PressureI', ds =>'PressureI');
my $retval = $interp->exec('/rrdgraph', rrd=>'Indoorsensor', ds =>'Pressure');
