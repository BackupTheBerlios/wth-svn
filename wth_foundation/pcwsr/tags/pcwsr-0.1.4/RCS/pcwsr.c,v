a125 62
/*
  readdata

  reading data from serial port

*/
static int 
readdata (int rfd)
{
  int err, i, n;
  int maxfd;
  int loop = 1;
  fd_set readfs;
  unsigned char *rbuf;
  struct timeval tv;
  
  err = -1;
  maxfd = rfd +1;

  
  for ( i = 0; i < 254; i++ ){
      rbuf[i] = 0;
  }

  /* loop until input is available */
  while ( loop) {
        
        FD_ZERO(&readfs);
        FD_SET(rfd, &readfs);

        tv.tv_sec  = TIMEOUT;
        /* tv.tv_usec = 0; */
        
        n = select(maxfd, &readfs, NULL, NULL, &tv);
        switch (n) {
        case -1:
          perror("select");
          return(-1);
        case 0:
          printf("select\t\t: Timeout\n");
          return(-1);
        default:
          
          /* loop until err = 0 */
          while ( ( rbuf[err-1] != 3) && ( err != 8)) {
                err = read(rfd, rbuf, MAXBUFF);
                perror("read returned");
                printf("read\t\t: errno: %d\n", errno);

                printf("read\t\t: err %d: rbuf: |", err);
                for ( i = 0; i < err; i++) {
                  printf("%d|", rbuf[i]);
                }
                printf("\n");
                loop=0;
          }
          break;
        }
  }
  return(0);
}

